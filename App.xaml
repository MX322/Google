<Application x:Class="Google.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Google"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        
        <Style x:Key="Text" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="ButtonTB" TargetType="Button">
            <Setter Property="Background" Value="#212121"/>
            <Setter Property="BorderBrush" Value="#212121"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style x:Key="ButtonSearch" TargetType="Button">
            <Setter Property="Background" Value="#424141"/>
            <Setter Property="Foreground" Value="White"/>

            <Setter Property="BorderBrush" Value="#212121"/>
            <Setter Property="BorderThickness" Value="0"/>

            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="3"/>
        </Style>

    </Application.Resources>
</Application>
